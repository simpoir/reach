IFS_orig=$IFS

typeset -g _r2_aliases
_r2_aliases=($(grep alias ~/.reach | sed 's/alias=['\''"]\(.\+\)['\''"]/\1/p'))
IFS=$IFS_orig


_r2() {
    _arguments -s -S \
        "*::r2 command:_r2_hosts"
    return 0
}

(( $+functions[_task_commands] )) ||
_r2_hosts() {
    local cmd ret=1
    _describe -t commands 'reach alias' _r2_aliases
}

